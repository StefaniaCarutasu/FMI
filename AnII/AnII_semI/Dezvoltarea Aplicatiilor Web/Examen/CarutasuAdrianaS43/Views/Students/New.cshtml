@model CarutasuAdrianaS43.Models.Student

<h3>@ViewBag.Message</h3>
<br />
<h2>Adaugare student</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Students"))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Nume", "Nume student")
    <br />
    @Html.TextBox("Nume", null, new { @class = "form-control" })
    <br />
    @Html.ValidationMessageFor(m => m.Nume, null, new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Email", "Email student")
    <br />
    @Html.TextBox("Email", null, new { @class = "form-control" })
    <br />
    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("DataNastere", "Data nasterii sub froma zz/ll/aaaa")
    <br />
    @Html.TextBox("DataNastere", null, new { @class = "form-control" })
    <br />
    @Html.ValidationMessageFor(m => m.DataNastere, null, new { @class = "text-danger" })
    <br />
    <br />

    <label>Selectati domeniul</label>
    @Html.DropDownListFor(m => m.DomainId, new SelectList(Model.Dom, "Value", "Text"),
    "Selectati domeniul", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.DomainId, "", new { @class = "text-danger" })
    <br />
    <br />
    <button class="btn btn-sm btn-success" type="submit">Adauga student</button>
}