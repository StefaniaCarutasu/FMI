@model BDProiect.Models.Post
@{
    ViewBag.Title = "Edit";
}

<h2>Editare postare</h2>

<form method="post" action="/Posts/Edit/@Model.PostId">
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.Hidden("PostId")


    @Html.Label("Content", "Continut postare")
    <br />
    @Html.Editor("Content")
    <br />
    <br />
    @Html.Hidden("Date")
    <br />
    @Html.Hidden("GroupId")
    <button class="btn btn-success" type="submit">Modifica postare</button>
</form>